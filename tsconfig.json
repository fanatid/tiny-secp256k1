{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "checkJs": true,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./lib",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "include": ["src_ts/*.ts"]
}
